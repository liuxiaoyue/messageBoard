extends layout
block content
  div.container
    form.form-signin(role="form", method="post") 
      if(!message)
        div 旧密码:
        input.form-control(type="password", placeholder="Old Password", required, name="oldpwd")
        div 新密码：
        input.form-control(type="password", placeholder="New Password", required, name="newpwd")
        div 确认密码：
        input.form-control(type="password", placeholder="Confirm Password", required, name="confirmpwd")
        br
        button.btn.btn-lg.btn-primary.btn-block(type="submit") 修改
      else
        span #{message}
