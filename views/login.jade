extends layout
block content
	div.container
		form.form-signin(role="form", method="post", action="/login")
			h2.form-signin-heading 请登录
			input.form-control(type="email", placeholder="Email address", required, autofocus, name="mail")
			input.form-control(type="password", class="form-control", placeholder="Password", required, name="password")
			div.chekbox
				label 记住我
					input(type="checkbox", value="remember-me", name="remember")
			button.btn.btn-lg.btn-primary.btn-block(type="submit") 登录